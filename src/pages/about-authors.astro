---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import book_placeholder from "../assets/book-placeholder.jpg";
---

<Layout title="authors">
  <main class="flex-column items-center justify-center">
    <h1 class="mt-10 text-center text-3xl text-gray-700">
      Picture of all the authors
    </h1>
    <p class="mt-5 text-center text-gray-700">Subtitle Goes Here</p>
    <div class="wx-10 mx-auto mb-20 mt-10 w-80 shadow-sm">
      <Image src={book_placeholder} alt="Picture of the class" class="w-full" />
    </div>
    <div class="mx-[20%] text-center text-gray-700">
      <p></p>
    </div>
  </main>
</Layout>
